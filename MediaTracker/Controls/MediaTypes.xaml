<UserControl x:Class="MediaTracker.Controls.MediaTypes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="Auto"
             Height="Auto"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Loaded="DbDisplay_OnLoaded"
             mc:Ignorable="d">
    <Grid Width="Auto"
          Height="Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <TabControl Name="tabMenu">
            <TabItem Header="Ongoing">
                <Grid x:Name="GridOngoing" Background="{x:Null}" />
            </TabItem>
            <TabItem Header="Complete">
                <Grid x:Name="GridComplete" Background="{x:Null}" />
            </TabItem>
            <TabItem Header="Planned">
                <Grid x:Name="GridPlanned" Background="{x:Null}" />
            </TabItem>
            <TabItem Header="Dropped">
                <Grid x:Name="GridDropped" Background="{x:Null}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
